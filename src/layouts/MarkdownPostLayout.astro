---
import BaseLayout from "./BaseLayout.astro";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
    <p>{frontmatter.pubDate.slice(0, 10)}</p>
    <p>Written by: {frontmatter.author}</p>
    <p><em>{frontmatter.description}</em></p>
    <img width="300" src={frontmatter.image.url} alt={frontmatter.image.alt} />
    <slot />
    <p>
        Tags: {
            frontmatter.tags.slice(0, -1).map((tag) => <span><a href={`../tags/${tag}`}>{tag}</a>, </span>)
        }<span><a href={`../tags/${frontmatter.tags[frontmatter.tags.length - 1]}`}>{frontmatter.tags[frontmatter.tags.length - 1]}</a></span>
    </p>
</BaseLayout>
